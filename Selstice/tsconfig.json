{
  "compilerOptions": {
    "jsx": "react",
    "lib": [ "es6", "dom" ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./wwwroot/scripts",
    "removeComments": true,
    //"sourceMap": true,
    //"allowJs": true,
    //"forceConsistentCasingInFileNames": true,
    //"noImplicitReturns": true,
    //"noImplicitThis": true,
    //"noImplicitAny": true,
    //"strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "Scripts/app"
  ]
}